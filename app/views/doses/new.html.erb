<div class="container">
  <div class="row">
    <div class="col-6 offset-3">
      <p>Add a dose... <p>
        <%= simple_form_for [@cocktail, @dose] do |f| %>
          <%= f.input :ingredient_id, collection: Ingredient.all %>
          <%= f.input :description %>
          <%= f.submit class: 'btn btn-primary' %>
          <%= link_to "Go back, w/o adding dose?", cocktails_path %>
        <% end %>
      </div>
    </div>
  </div>
