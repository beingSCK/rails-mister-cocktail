<div class="container">
  <div class="row">
    <div class="col-6 offset-3">
      <h3>My Cocktails</h3>
      <ul>
        <% @cocktails.each do |cocktail| %>
        <li><%= link_to "#{cocktail.name}", cocktail_path(cocktail) %></li>
        <% end %>
        <li> <%= link_to "Add a cocktail?", new_cocktail_path, class: "text-muted"    %> </li>
      </ul>
    </div>
  </div>
</div>

