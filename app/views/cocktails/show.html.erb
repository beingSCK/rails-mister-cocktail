<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <% if @cocktail.photo.attached? %>
      <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
      <% end %>
      <h3><%= @cocktail.name %></h3>
      <ul><% @cocktail.doses.each do |dose| %>
        <li><%="#{dose.ingredient.name}: #{dose.description}"%>
          <%= link_to "(click to remove this dose)", cocktail_dose_path(dose.id), method: :delete %></li>
          <% end %>
          <%= link_to "Add a dose to this drink?", new_cocktail_dose_path(@cocktail.id) %>
        </ul>
        <%= link_to "Back", cocktails_path, class: "btn btn-warning" %>
      </div>
    </div>
  </div>
